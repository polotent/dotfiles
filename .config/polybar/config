label-background = ${colors.orange}
label-foreground = ${colors.black}

[module/brightness]
type = custom/script
exec = $HOME/scripts/brightness.sh
interval = 1
format-prefix = " "
format-padding = 1
format-background = ${colors.black}
format-foreground = ${colors.white}

[module/date]
type = internal/date
